{
  "openapi": "3.0.0",
  "info": {
    "title": "Spring Boot MyBatis-Plus API",
    "description": "用户管理API接口文档 - 已更新为RESTful规范",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:2025",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/api/student": {
      "get": {
        "tags": ["学生管理"],
        "summary": "查询所有学生",
        "description": "获取所有学生信息列表",
        "responses": {
          "200": {
            "description": "成功返回学生列表",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResultOfListStudentVO"
                },
                "example": {
                  "code": 200,
                  "message": "操作成功",
                  "data": [
                    {
                      "studentId": 1,
                      "studentNumber": "2024001",
                      "studentName": "张三",
                      "gender": "男",
                      "phone": "13800138000",
                      "idCard": "110101199001011234",
                      "grade": "2024级",
                      "className": "计算机1班",
                      "hometown": "北京",
                      "address": "北京市朝阳区"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/user/list": {
      "get": {
        "tags": ["用户管理"],
        "summary": "获取用户列表",
        "description": "获取所有用户信息",
        "responses": {
          "200": {
            "description": "成功返回用户列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "name": "张三",
                    "age": 25
                  },
                  {
                    "id": 2,
                    "name": "李四",
                    "age": 30
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/user/getUser/{id}": {
      "get": {
        "tags": ["用户管理"],
        "summary": "根据ID获取用户",
        "description": "根据用户ID获取单个用户信息",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "用户ID",
            "schema": {
              "type": "string"
            },
            "example": "1"
          }
        ],
        "responses": {
          "200": {
            "description": "成功返回用户信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "example": {
                  "id": 1,
                  "name": "张三",
                  "age": 25
                }
              }
            }
          },
          "404": {
            "description": "用户不存在"
          }
        }
      }
    },
    "/user/insert": {
      "post": {
        "tags": ["用户管理"],
        "summary": "新增用户",
        "description": "插入新用户信息（使用POST方法和JSON格式）",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserInput"
              },
              "example": {
                "name": "王五",
                "age": 28
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功插入用户"
          },
          "400": {
            "description": "请求参数错误"
          }
        }
      }
    },
    "/user/update": {
      "put": {
        "tags": ["用户管理"],
        "summary": "更新用户",
        "description": "根据ID更新用户信息（使用PUT方法和JSON格式）",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "id": 1,
                "name": "张三更新",
                "age": 26
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功更新用户"
          },
          "400": {
            "description": "请求参数错误"
          },
          "404": {
            "description": "用户不存在"
          }
        }
      }
    },
    "/user/delete/{id}": {
      "delete": {
        "tags": ["用户管理"],
        "summary": "删除用户",
        "description": "根据ID删除用户（使用DELETE方法和路径参数）",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "用户ID",
            "schema": {
              "type": "string"
            },
            "example": "1"
          }
        ],
        "responses": {
          "200": {
            "description": "成功删除用户"
          },
          "404": {
            "description": "用户不存在"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "用户ID（自动生成）",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "用户姓名",
            "example": "张三"
          },
          "age": {
            "type": "integer",
            "description": "用户年龄",
            "example": 25
          }
        },
        "required": ["name", "age"]
      },
      "UserInput": {
        "type": "object",
        "required": ["name", "age"],
        "properties": {
          "name": {
            "type": "string",
            "description": "用户姓名",
            "example": "王五"
          },
          "age": {
            "type": "integer",
            "description": "用户年龄",
            "example": 28
          }
        }
      },
      "ResultOfListStudentVO": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "description": "响应状态码",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "响应消息",
            "example": "操作成功"
          },
          "data": {
            "type": "array",
            "description": "学生列表数据",
            "items": {
              "$ref": "#/components/schemas/StudentVO"
            }
          }
        },
        "required": ["code", "message", "data"]
      },
      "StudentVO": {
        "type": "object",
        "properties": {
          "studentId": {
            "type": "integer",
            "description": "学生ID",
            "example": 1
          },
          "studentNumber": {
            "type": "string",
            "description": "学号",
            "example": "2024001"
          },
          "studentName": {
            "type": "string",
            "description": "学生姓名",
            "example": "张三"
          },
          "gender": {
            "type": "string",
            "description": "性别",
            "example": "男"
          },
          "phone": {
            "type": "string",
            "description": "联系方式",
            "example": "13800138000"
          },
          "idCard": {
            "type": "string",
            "description": "身份证号",
            "example": "110101199001011234"
          },
          "grade": {
            "type": "string",
            "description": "年级",
            "example": "2024级"
          },
          "className": {
            "type": "string",
            "description": "班级",
            "example": "计算机1班"
          },
          "hometown": {
            "type": "string",
            "description": "籍贯",
            "example": "北京"
          },
          "address": {
            "type": "string",
            "description": "住址",
            "example": "北京市朝阳区"
          }
        }
      },
      "Result": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "description": "响应状态码",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "响应消息",
            "example": "操作成功"
          },
          "data": {
            "description": "响应数据（根据具体接口而定）"
          }
        },
        "required": ["code", "message"]
      }
    }
  }
}
